// Test data to be used by Bactopia tests
// Modeled after nf-core/modules setup

params {
    test_data {
        // Illumina HiSeq - Candidatus Portiera aleyrodidarum 
        'illumina' {
            name = "SRR2838702"
            r1 = "${params.test_data_dir}/fastq/illumina/SRR2838702_R1.fastq.gz"
            r2 = "${params.test_data_dir}/fastq/illumina/SRR2838702_R2.fastq.gz"
            se = "${params.test_data_dir}/fastq/illumina/SRR2838702SE.fastq.gz"
        }

        // Candidatus Portiera aleyrodidarum completed genome (~350kb)
        'reference' {
            name = "GCF_000292685"
            blastdb = "${params.test_data_dir}/reference/blastdb"
            faa = "${params.test_data_dir}/reference/GCF_000292685.faa"
            ffn = "${params.test_data_dir}/reference/GCF_000292685.ffn"
            fna = "${params.test_data_dir}/reference/GCF_000292685.fna"
            gbk = "${params.test_data_dir}/reference/GCF_000292685.gbk"
            genome_size = "${params.test_data_dir}/reference/GCF_000292685-genome-size.txt"
            total_contigs = "${params.test_data_dir}/reference/total_contigs_1"
        }
        
        // datasets
        'datasets' {
            'amrdb' {
                amrfinder = "${params.test_data_dir}/datasets/amrdb/amrfinderdb.tar.gz"
            }
            'ariba' {
                card = "${params.test_data_dir}/datasets/ariba/card.tar.gz"
                vfdb_core = "${params.test_data_dir}/datasets/ariba/vfdb_core.tar.gz"
            }
            'blast' {
                genes = "${params.test_data_dir}/datasets/blast/genes"
                proteins = "${params.test_data_dir}/datasets/blast/proteins"
                primers = "${params.test_data_dir}/datasets/blast/primers"
            }
            'auto_variant' {
                reference = "${params.test_data_dir}/datasets/variants/SRR2838702-GCF_000292685.gbk"
            }
        }

        // Empty files
        'empty' {
            fna = "${params.test_data_dir}/empty/EMPTY.fna.gz"
            fastq = "${params.test_data_dir}/empty/EMPTY.fastq.gz"
            proteins = "${params.test_data_dir}/empty/EMPTY_PROTEINS"
            prodigal_tf = "${params.test_data_dir}/empty/EMPTY_TF"
        }
    }
}
