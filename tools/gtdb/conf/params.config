params {
    // Bactopia
    bactopia = null
    prefix = "gtdb"
    max_time = 720
    max_memory = 32
    cpus = 1
    outdir = './'
    help = null
    version = null
    force = false
    sleep_time = 5
    exclude = null
    include = null
    publish_mode = 'copy'
    nfconfig = null
    condadir = "${baseDir}/conda/envs"
    cleanup_workdir = false
    registry = "dockerhub"
    singularity_cache = "$HOME/.bactopia/singularity"

    // bactopia tools helper
    force_rebuild = null
    skip_conda = null
    verbose = null
    silent = null
    
    // GTDB-Tk
    gtdb = null
    download_gtdb = false
    min_perc_aa = 10
    recalculate_red = null
    debug = false
    force_gtdb = false
}
