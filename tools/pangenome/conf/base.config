process {
    // Defaults
    cpus = {check_max(1, 'cpus' )}
    memory = {check_max(16.GB * task.attempt, 'memory' )}
    time = {check_max((params.max_time).m, 'time' )}
    errorStrategy = 'retry'
    maxRetries = 0

    withName: 'build_pangenome|identify_recombination|create_phylogeny' {
        cpus = {check_max(params.cpus, 'cpus')}
    }
}
